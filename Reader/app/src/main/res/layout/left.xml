<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_draw_left"
    style="@style/leftwith"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:background="#ffffffff">
    <FrameLayout
        style="@style/leftwith"
        android:layout_height="170dp"
        android:background="#ff009966">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:background="#ff009966"
            android:src="@drawable/touxiang"/>
        <TextView
            android:id="@+id/tv_left_uname"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登陆，点击登陆"
            android:textColor="#ff000000"
            android:textSize="25sp"/>
    </FrameLayout>
    <Button
        android:id="@+id/btn_left_home"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="首页" />
    <Button
        android:id="@+id/btn_left_sort"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="分类" />
    <Button
        android:id="@+id/btn_left_book_store"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="书架" />
    <LinearLayout
        style="@style/leftwith"
        android:layout_height="4dp"
        android:background="#88000000">
    </LinearLayout>
    <TextView
        style="@style/leftwith"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:layout_marginLeft="35dp"
        android:text="其他" />
    <Button
        android:id="@+id/left_btn_setting"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="设置" />
    <Button
        android:id="@+id/left_btn_about"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="关于" />
    <Button
        android:id="@+id/btn_reset"
        style="@style/leftbutton"
        android:drawableLeft="@drawable/draw_search_40"
        android:text="重置登录状态" />
</LinearLayout>
